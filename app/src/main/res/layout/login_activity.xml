<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="192dp"
        android:layout_height="107dp"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5dp"
        android:layout_x="97dp"
        android:layout_y="146dp"
        app:srcCompat="@drawable/carsharing_logo"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="141dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:background="@color/car2goBlue"
        android:text=" CarSharing"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="30sp"
        app:layout_column="0"
        app:layout_row="0" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="203dp"
        android:layout_height="126dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_x="90dp"
        android:layout_y="36dp"
        app:srcCompat="@drawable/account_graphic"
        tools:layout_editor_absoluteX="91dp"
        tools:layout_editor_absoluteY="36dp" />

    <EditText
        android:id="@+id/email_input"
        android:layout_width="379dp"
        android:layout_height="46dp"
        android:layout_above="@+id/password_input"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:layout_x="0dp"
        android:layout_y="269dp"
        android:hint="E-Mail"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="248dp" />

    <EditText
        android:id="@+id/password_input"
        android:layout_width="379dp"
        android:layout_height="43dp"
        android:layout_above="@+id/password_reset"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="-1dp"
        android:layout_x="0dp"
        android:layout_y="311dp"
        android:hint="Password"
        android:selectAllOnFocus="false"
        android:singleLine="false"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="294dp"
        android:inputType="textPassword"/>

    <TextView
        android:id="@+id/password_reset"
        android:layout_width="164dp"
        android:layout_height="36dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="208dp"
        android:layout_x="4dp"
        android:layout_y="354dp"
        android:onClick="forgotPassword"
        android:text="@string/forgotPass"
        android:textAllCaps="false"
        android:textColor="@color/car2goBlue"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="337dp" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="141dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="113dp"
        android:layout_x="123dp"
        android:layout_y="407dp"
        android:background="@color/car2goBlue"
        android:onClick="redirectLogin"
        android:text="Login"
        android:textColor="@color/ownWhite"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="375dp" />
</RelativeLayout>